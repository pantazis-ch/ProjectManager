<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/fade </item>
        <item name="android:windowExitTransition">@android:transition/fade </item>
    </style>

    <style name="FabButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/ic_add_24dp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="InputPanel">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">@color/colorInputBackground</item>
        <item name="android:layout_margin">@dimen/margin_short</item>
        <item name="android:padding">@dimen/padding_short</item>
    </style>

    <style name="InputLabel">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">6dp</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="InputRequiredLabel">
        <item name="android:background">@color/colorRequiredLabelBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="InputOptionalLabel">
        <item name="android:background">@color/colorOptionalLabelBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="InputButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:selectableItemBackgroundBorderless">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ReadOnlyMode">
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="InputEditTextEnabled">

    </style>

    <style name="InputEditTextDisabled">

    </style>


</resources>
